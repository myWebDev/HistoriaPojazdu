<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.v3l0c1r4pt0r.cepik.OsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <!-- TODO: Update blank fragment layout -->
        

    <TableLayout
        android:id="@+id/axisTable"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="#555"
    	android:padding="1dp"
    	android:stretchColumns="0,2" >

    	<TableRow
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@android:color/background_dark" >

    	    <TextView
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:padding="3dp"
    	        android:textStyle="bold"
    	        android:text="@string/dateCap" />
    	    
    	    <View 
    	        android:background="#555"
				android:layout_width="1dp"
				android:layout_height="fill_parent" />

    	    <TextView
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_weight="1"
    	        android:padding="3dp"
    	        android:textStyle="bold"
    	        android:text="@string/zdarzenieCap" />

    	</TableRow>
    	
    	<TableRow 
    	    android:background="#555" >
    	    <View android:layout_height="1dp"/>
    	</TableRow>

    	<TableRow
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:background="@android:color/background_dark" >

    	    <TextView
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:padding="3dp"
    	        android:text="1890" />
    	    
    	    <View 
    	        android:background="#555"
				android:layout_width="1dp"
				android:layout_height="fill_parent" />

    	    <TextView
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_weight="1"
    	        android:padding="3dp"
    	        android:text="Rok produkcji" />

    	</TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/podsumowanieCap"
        android:textStyle="bold"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/wlascicieleCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wlascicieleCap" />

    <TextView
        android:id="@+id/wlascicieleVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/wspolwlascicieleCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wspolwlascicieleCap" />

    <TextView
        android:id="@+id/wspolwlascicieleVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/aktualnyCap"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/wojewodztwoCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wojewodztwoCap" />

    <TextView
        android:id="@+id/wojewodztwoVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ocFullCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ocFullCap" />

    <TextView
        android:id="@+id/ocFullVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/przegladFullCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/przegladFullCap" />

    <TextView
        android:id="@+id/przegladFullVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/kradzionyFullCap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kradzionyFullCap"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:textColor="#f00"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/wlascicieleAkCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wlascicieleAkCap" />

    <TextView
        android:id="@+id/wlascicieleAkVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/wspolwlascicieleAkCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wspolwlascicieleAkCap" />

    <TextView
        android:id="@+id/wspolwlascicieleAkVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	</LinearLayout>
</ScrollView>
